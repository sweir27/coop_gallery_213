<% provide(:title, 'Artwork') %>
<div class='artwork-page'>
  <div class='artwork-page--content'>
    <div class='artwork-page--image'>
      <%= image_tag @artwork.large_image %>
    </div>

    <div class='artwork-page--info'>
      <div class='artwork-page--artist'>
        <a href=<%= "#{artist_path(@artist)}" %>>
          <%= @artist.name %>
        </a>
      </div>

      <div class='artwork-page--title'>
        <%= @artwork.title %>
      </div>

      <div class='artwork-page--contact'>
        <%= mail_to 'cooperativegallery213@gmail.com', 'Contact gallery', subject: "Interested in #{@artwork.title} by #{@artist.name}" %>
      </div>
    </div>
  </div>

  <div class='artwork-page--more-works'>
    <h2 class='maroon'>
      More works by this artist
    </h2>
    <%= render 'shared/artwork_thumbs', { artist: @artist, artworks: @artworks } %>
  </div>
</div>
