<li>
  <div class='column-inner-inner'>
    <div class='onerow'>
      <div class='text-inset-title'>
        <%= event.title %>
      </div>
      <div class='text-subline text-subtitle-date'>
        <%= "#{event.event_date.strftime('%m/%d/%Y')}, #{event.start_time.strftime('%I:%M %p')} - #{event.end_time.strftime('%I:%M %p')}" %>
      </div>
      <% unless event.url.blank? %>
        <div class='text-subline'>
          <%= link_to event.url, event.url %>
        </div>
      <% end %>
      <div class='ind-event-text'>
        <% if event.pdf.filename.present? %>
          <% unless event.pdf_title.blank? %>
            <span class='uppercase-subtitle-black'>
              PDF
            </span>
            <%= link_to event.pdf_title, event.pdf %>
          <% else %>
            <span class='uppercase-subtitle-black'>
              PDF
            </span>
            <%= link_to 'View', event.pdf %>
          <% end %>
        <% end %>
      </div>
      <div class='spaced-text'>
        <%= simple_format(event.description) %>
      </div>
    </div>
    <% if current_user && current_user.admin? %>
      <div class='admin-options small-padding'>
        <%= link_to "delete", admin_event_path(event), method: :delete, data: { confirm: "Are you sure you want to delete this event?" }, class: 'admin-option' %>
        <%= link_to "edit", edit_admin_event_path(event), class: 'admin-option' %>
        <% if not event.on_homepage? %>
          <%= link_to "show on homepage", set_homepage_admin_event_path(event), method: :post, class: 'admin-option' %>
        <% end %>
        <% if event.on_homepage? %>
          <%= link_to "remove from homepage", set_homepage_admin_event_path(event), method: :post, class: 'admin-option' %>
        <% end %>
      </div>
    <% end %>
  </div>
</li>
