<% provide(:title, 'New event') %>
<h2 class='center'>Create event</h2>

<div class='row'>
  <div class='span7 offset1'>
    <%= form_for [:admin, @event], :html => { :multipart => true } do |f| %>
      <%= render 'shared/error_messages', :item => @event %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :url %>
      <%= f.text_field :url %>

      <%= f.label :event_date %>
      <%= f.date_select :event_date %>

      <%= f.label :start_time %>
      <%= f.time_select :start_time %>

      <%= f.label :end_time %>
      <%= f.time_select :end_time %>

      <%= f.label :pdf_title %>
      <%= f.text_field :pdf_title %>

      <p>
        <b>Event pdf (optional)</b><br/>
        <%= f.file_field :pdf %>
      </p>

      <%= f.submit "Create event", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>